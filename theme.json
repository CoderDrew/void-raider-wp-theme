{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "background",
          "color": "#0A0A0F",
          "name": "Background"
        },
        {
          "slug": "foreground",
          "color": "#ffffff",
          "name": "Foreground"
        },
        {
          "slug": "primary",
          "color": "#C8FF00",
          "name": "Primary"
        },
        {
          "slug": "primary-foreground",
          "color": "#0A0A0F",
          "name": "Primary Foreground"
        },
        {
          "slug": "secondary",
          "color": "#00D4FF",
          "name": "Secondary"
        },
        {
          "slug": "secondary-foreground",
          "color": "#ffffff",
          "name": "Secondary Foreground"
        },
        {
          "slug": "muted",
          "color": "#2C2F36",
          "name": "Muted"
        },
        {
          "slug": "muted-foreground",
          "color": "#9CA3AF",
          "name": "Muted Foreground"
        },
        {
          "slug": "accent",
          "color": "#FF008C",
          "name": "Accent"
        },
        {
          "slug": "accent-foreground",
          "color": "#ffffff",
          "name": "Accent Foreground"
        },
        {
          "slug": "destructive",
          "color": "#EF4444",
          "name": "Destructive"
        },
        {
          "slug": "destructive-foreground",
          "color": "#ffffff",
          "name": "Destructive Foreground"
        },
        {
          "slug": "border",
          "color": "rgba(255, 255, 255, 0.1)",
          "name": "Border"
        },
        {
          "slug": "input-background",
          "color": "#1A1A2E",
          "name": "Input Background"
        },
        {
          "slug": "card",
          "color": "#16162A",
          "name": "Card"
        },
        {
          "slug": "card-foreground",
          "color": "#ffffff",
          "name": "Card Foreground"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "lineHeight": true,
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Base"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.5rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "2rem",
          "name": "2X Large"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "'Orbitron', sans-serif",
          "slug": "headline",
          "name": "Headline (Orbitron)"
        },
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "body",
          "name": "Body (Inter)"
        },
        {
          "fontFamily": "'Share Tech Mono', monospace",
          "slug": "mono",
          "name": "Mono (Share Tech Mono)"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingSizes": [
        {
          "size": "0.25rem",
          "slug": "xs",
          "name": "Extra Small"
        },
        {
          "size": "0.5rem",
          "slug": "sm",
          "name": "Small"
        },
        {
          "size": "1rem",
          "slug": "md",
          "name": "Medium"
        },
        {
          "size": "1.5rem",
          "slug": "lg",
          "name": "Large"
        },
        {
          "size": "2rem",
          "slug": "xl",
          "name": "Extra Large"
        },
        {
          "size": "3rem",
          "slug": "2xl",
          "name": "2X Large"
        }
      ]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.5"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      }
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--primary-foreground)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--body)",
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "500"
        },
        "border": {
          "radius": "0.625rem"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary)"
          }
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--headline)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "700",
          "lineHeight": "1.5"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--headline)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "700",
          "lineHeight": "1.5"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--headline)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "700",
          "lineHeight": "1.5"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--headline)",
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "500",
          "lineHeight": "1.5"
        }
      }
    },
    "blocks": {
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--headline)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "800"
        }
      },
      "core/navigation": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--body)",
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "500"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "front-page",
      "title": "Front Page",
      "postTypes": ["page"]
    }
  ]
}
